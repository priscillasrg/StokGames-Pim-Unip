        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="526*"/>
        </Grid.RowDefinitions>
        <Image Margin="346,10,349,13" Source="/StokGames;component/stok_games_logo.png" Stretch="Fill" Grid.RowSpan="2"/>
        <Border BorderBrush="#DCDCDC" BorderThickness="1" HorizontalAlignment="Left" Height="647" Margin="723,0,0,0" VerticalAlignment="Top" Width="69" Background="#191970" Grid.RowSpan="3"/>
        <Border BorderBrush="#DCDCDC" BorderThickness="1" HorizontalAlignment="Left" Height="647" VerticalAlignment="Top" Width="69" Background="#191970" Grid.RowSpan="3"/>

        <Button x:Name="btnCadastrarCadFuncionario" HorizontalAlignment="Left" Margin="619,426,0,0" VerticalAlignment="Top" Width="74" Height="37" Background="#FFEEEEEE" Content="Salvar" Click="BtnCadastrarCadFuncionario_Click" Grid.Row="2"/>
        <Button x:Name="btnExcluirCadFuncionario" HorizontalAlignment="Left" Margin="642,0,0,0" VerticalAlignment="Top" Width="74" Height="37" Background="#FFEEEEEE" Content="Excluir" Click="BtnExcluirCadFuncionario_Click" Grid.Row="2"/>
        <Button x:Name="btnVoltarCadFuncionario" HorizontalAlignment="Left" Margin="86,20,0,0" VerticalAlignment="Top" Width="74" Height="37" Background="#FFEEEEEE" Content="Voltar" Click="BtnVoltarCadFuncionarios_Click" Grid.Row="1"/>
        <Button x:Name="btnEditarCadFuncionario" HorizontalAlignment="Left" Margin="563,0,0,0" VerticalAlignment="Top" Width="74" Height="37" Background="#FFEEEEEE" Content="Editar" Click="BtnEditarCadFuncionario_Click" Grid.Row="2"/>
